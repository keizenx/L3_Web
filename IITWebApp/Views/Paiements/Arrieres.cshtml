<!-- Modal pour enregistrer un paiement -->
<div class="modal fade" id="modalPaiement" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-credit-card me-2"></i>Enregistrer un Paiement
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formPaiement">
                    <div class="mb-3">
                        <label for="modalMatricule" class="form-label">Matricule</label>
                        <input type="text" id="modalMatricule" class="form-control" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="modalMontant" class="form-label">Montant du Paiement *</label>
                        <input type="number" id="modalMontant" class="form-control" step="0.01" required>
                    </div>
                    <div class="mb-3">
                        <label for="modalMode" class="form-label">Mode de Paiement *</label>
                        <select id="modalMode" class="form-select" required>
                            <option value="">Sélectionner...</option>
                            <option value="Espèces">Espèces</option>
                            <option value="Virement">Virement bancaire</option>
                            <option value="Chèque">Chèque</option>
                            <option value="Mobile Money">Mobile Money</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="modalDate" class="form-label">Date du Paiement *</label>
                        <input type="date" id="modalDate" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="modalObservation" class="form-label">Observation</label>
                        <textarea id="modalObservation" class="form-control" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-success" onclick="confirmerPaiement()">
                    <i class="fas fa-check me-2"></i>Confirmer le Paiement
                </button>
            </div>
        </div>
    </div>
</div>

