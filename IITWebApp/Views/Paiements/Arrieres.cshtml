        function reinitialiserFiltres() {
            document.getElementById('filtreClasse').value = '';
            document.getElementById('filtreDuree').value = '';
            document.getElementById('filtreMontant').value = '';
            alert('Filtres réinitialisés !');
        }

        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAll');
            const checkboxes = document.querySelectorAll('.select-row');
            
            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAll.checked;
            });
        }

        function voirDetails(matricule) {
            alert(`Voir les détails de l'étudiant ${matricule}`);
            // Rediriger vers la page de détails
            // window.location.href = `/Etudiants/Details/${matricule}`;
        }

        function enregistrerPaiement(matricule) {
            document.getElementById('modalMatricule').value = matricule;
            document.getElementById('modalDate').value = new Date().toISOString().split('T')[0];
            
            const modal = new bootstrap.Modal(document.getElementById('modalPaiement'));
            modal.show();
        }

        function confirmerPaiement() {
            const matricule = document.getElementById('modalMatricule').value;
            const montant = document.getElementById('modalMontant').value;
            const mode = document.getElementById('modalMode').value;
            const date = document.getElementById('modalDate').value;
            const observation = document.getElementById('modalObservation').value;

            if (!montant || !mode || !date) {
                alert('Veuillez remplir tous les champs obligatoires.');
                return;
            }

            if (confirm(`Confirmer le paiement de ${montant} FCFA pour l'étudiant ${matricule} ?`)) {
                // Simulation de l'enregistrement du paiement
                alert('Paiement enregistré avec succès !');
                
                // Fermer le modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('modalPaiement'));
                modal.hide();
                
                // Recharger la page ou mettre à jour le tableau
                location.reload();
            }
        }

        function envoyerRappel(matricule) {
            if (confirm(`Envoyer un rappel de paiement à l'étudiant ${matricule} ?`)) {
                alert(`Rappel envoyé à l'étudiant ${matricule} !`);
            }
        }

        function envoyerRappels() {
            const selectedRows = document.querySelectorAll('.select-row:checked');
            
            if (selectedRows.length === 0) {
                alert('Veuillez sélectionner au moins un étudiant.');
                return;
            }

            if (confirm(`Envoyer des rappels à ${selectedRows.length} étudiants ?`)) {
                alert(`${selectedRows.length} rappels envoyés avec succès !`);
            }
        }

        function exporterArrieres() {
