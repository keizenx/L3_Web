@model IITWebApp.Models.Paiement

@{
    ViewData["Title"] = "Modifier le paiement";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">
            <i class="fas fa-edit me-2"></i>
            Modifier le paiement
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="IdPaiement" />

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="TypePaiement" class="form-label">Type de paiement</label>
                        <select asp-for="TypePaiement" class="form-control">
                            <option value="">Sélectionner...</option>
                            <option value="scolarité" selected="@(Model?.TypePaiement == "scolarité")">Scolarité</option>
                            <option value="service" selected="@(Model?.TypePaiement == "service")">Service</option>
                            <option value="autre" selected="@(Model?.TypePaiement == "autre")">Autre</option>
                        </select>
                        <span asp-validation-for="TypePaiement" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Montant" class="form-label">Montant</label>
                        <input asp-for="Montant" class="form-control" type="number" step="0.01" value="@Model?.Montant" />
                        <span asp-validation-for="Montant" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DatePaiement" class="form-label">Date de paiement</label>
                        <input asp-for="DatePaiement" class="form-control" type="date" value="@Model?.DatePaiement.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="DatePaiement" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="MethodePaiement" class="form-label">Méthode de paiement</label>
                        <select asp-for="MethodePaiement" class="form-control">
                            <option value="">Sélectionner...</option>
                            <option value="Espèces" selected="@(Model?.MethodePaiement == "Espèces")">Espèces</option>
                            <option value="Virement" selected="@(Model?.MethodePaiement == "Virement")">Virement</option>
                            <option value="Chèque" selected="@(Model?.MethodePaiement == "Chèque")">Chèque</option>
                            <option value="Carte bancaire" selected="@(Model?.MethodePaiement == "Carte bancaire")">Carte bancaire</option>
                        </select>
                        <span asp-validation-for="MethodePaiement" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Statut" class="form-label">Statut</label>
                        <select asp-for="Statut" class="form-control">
                            <option value="en attente" selected="@(Model?.Statut == "en attente")">En attente</option>
                            <option value="valide" selected="@(Model?.Statut == "valide")">Validé</option>
                            <option value="rejeté" selected="@(Model?.Statut == "rejeté")">Rejeté</option>
                        </select>
                        <span asp-validation-for="Statut" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ReferencePaiement" class="form-label">Référence de paiement</label>
                        <input asp-for="ReferencePaiement" class="form-control" value="@Model?.ReferencePaiement" />
                        <span asp-validation-for="ReferencePaiement" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Enregistrer
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
