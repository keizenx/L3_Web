@model IITWebApp.Models.Paiement

@{
    ViewData["Title"] = "Nouveau Paiement";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Nouveau Paiement</h1>
        <a href="/Paiements" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left fa-sm"></i> Retour à la liste
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Informations du Paiement</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IdEtudiant" class="form-label">Étudiant *</label>
                            <select asp-for="IdEtudiant" class="form-select" asp-items="ViewBag.IdEtudiant">
                                <option value="">Sélectionner un étudiant...</option>
                            </select>
                            <span asp-validation-for="IdEtudiant" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TypePaiement" class="form-label">Type de Paiement *</label>
                            <select asp-for="TypePaiement" class="form-select">
                                <option value="">Sélectionner...</option>
                                <option value="Inscription">Inscription</option>
                                <option value="Scolarité">Scolarité</option>
                                <option value="Service">Service</option>
                                <option value="Autre">Autre</option>
                            </select>
                            <span asp-validation-for="TypePaiement" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IdInscription" class="form-label">Inscription (Optionnel)</label>
                            <select asp-for="IdInscription" class="form-select" asp-items="ViewBag.IdInscription">
                                <option value="">Sélectionner une inscription...</option>
                            </select>
                            <span asp-validation-for="IdInscription" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IdSouscriptionService" class="form-label">Souscription Service (Optionnel)</label>
                            <select asp-for="IdSouscriptionService" class="form-select" asp-items="ViewBag.IdSouscriptionService">
                                <option value="">Sélectionner un service...</option>
                            </select>
                            <span asp-validation-for="IdSouscriptionService" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Montant" class="form-label">Montant *</label>
                            <input asp-for="Montant" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Montant" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="MethodePaiement" class="form-label">Méthode de Paiement *</label>
                            <select asp-for="MethodePaiement" class="form-select">
                                <option value="">Sélectionner...</option>
                                <option value="Espèces">Espèces</option>
                                <option value="Chèque">Chèque</option>
                                <option value="Virement">Virement</option>
                                <option value="Carte Bancaire">Carte Bancaire</option>
                                <option value="Mobile Money">Mobile Money</option>
                            </select>
                            <span asp-validation-for="MethodePaiement" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ReferencePaiement" class="form-label">Référence Paiement</label>
                            <input asp-for="ReferencePaiement" class="form-control" placeholder="REF-2025-001" />
                            <span asp-validation-for="ReferencePaiement" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Statut" class="form-label">Statut</label>
                            <select asp-for="Statut" class="form-select">
                                <option value="valide">Validé</option>
                                <option value="en attente">En attente</option>
                                <option value="annule">Annulé</option>
                            </select>
                            <span asp-validation-for="Statut" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/Paiements" class="btn btn-secondary">Annuler</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
