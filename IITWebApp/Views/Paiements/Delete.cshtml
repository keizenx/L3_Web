@model IITWebApp.Models.Paiement

@{
    ViewData["Title"] = "Supprimer le paiement";
}

<div class="card">
    <div class="card-header">
        <h4 class="mb-0 text-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Confirmer la suppression
        </h4>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Attention !</strong> Cette action est irréversible. Êtes-vous sûr de vouloir supprimer ce paiement ?
        </div>

        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Type de paiement :</dt>
                    <dd class="col-sm-8">@Model.TypePaiement</dd>

                    <dt class="col-sm-4">Montant :</dt>
                    <dd class="col-sm-8">@Model.Montant.ToString("N0") FCFA</dd>

                    <dt class="col-sm-4">Date de paiement :</dt>
                    <dd class="col-sm-8">@Model.DatePaiement.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Mode de paiement :</dt>
                    <dd class="col-sm-8">@Model.MethodePaiement</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Référence :</dt>
                    <dd class="col-sm-8">@Model.ReferencePaiement</dd>

                    <dt class="col-sm-4">Statut :</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-@(Model.Statut == "valide" ? "success" : Model.Statut == "en attente" ? "warning" : "secondary")">
                            @Model.Statut
                        </span>
                    </dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="IdPaiement" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Annuler
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-1"></i> Confirmer la suppression
                </button>
            </div>
        </form>
    </div>
</div>
