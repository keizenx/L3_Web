<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IIT University</title>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- CSS principal -->
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/css/custom.css" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navigation moderne -->
    <nav class="navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-university"></i>
                IIT University
            </a>
            
            <ul class="navbar-nav">
                <li><a class="nav-link" href="/"><i class="fas fa-home"></i> Accueil</a></li>

                <!-- PHASE 1 -->
                <li class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                        <i class="fas fa-graduation-cap"></i> Phase 1
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Home/Phase1Dashboard"><i class="fas fa-tachometer-alt"></i> Tableau de Bord</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Etudiants"><i class="fas fa-users"></i> Étudiants</a></li>
                        <li><a class="dropdown-item" href="/Inscriptions"><i class="fas fa-clipboard-list"></i> Inscriptions</a></li>
                        <li><a class="dropdown-item" href="/Inscriptions/Reinscription"><i class="fas fa-redo"></i> Réinscriptions</a></li>
                        <li><a class="dropdown-item" href="/Inscriptions/Promotion"><i class="fas fa-arrow-up"></i> Promotions</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Paiements"><i class="fas fa-dollar-sign"></i> Paiements</a></li>
                        <li><a class="dropdown-item" href="/Paiements/Arrieres"><i class="fas fa-exclamation-triangle"></i> Arriérés</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Services"><i class="fas fa-cogs"></i> Services</a></li>
                    </ul>
                </li>

                <!-- PHASE 2 -->
                <li class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                        <i class="fas fa-chalkboard-teacher"></i> Phase 2
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Enseignants"><i class="fas fa-user-tie"></i> Enseignants</a></li>
                        <li><a class="dropdown-item" href="/Cours"><i class="fas fa-book"></i> Cours</a></li>
                        <li><a class="dropdown-item" href="/Absences"><i class="fas fa-calendar-times"></i> Absences</a></li>
                        <li><a class="dropdown-item" href="/HonoraireEnseignants"><i class="fas fa-money-bill-wave"></i> Honoraires</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    
    <!-- Contenu principal -->
    <main class="main-content">
        <div class="container-fluid">
            @await Html.PartialAsync("_ErrorMessages")
            @RenderBody()
        </div>
    </main>
    
    <!-- Footer moderne -->
    <footer class="footer">
        <div class="container-fluid">
            <div>
                <i class="fas fa-copyright me-1"></i> 2025 - IIT University - Système de Gestion
            </div>
            <div class="footer-right">
                <i class="fas fa-code me-1"></i> ASP.NET Core MVC + MySQL
            </div>
        </div>
    </footer>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>