@model IEnumerable<IITWebApp.Models.Service>

@{
    ViewData["Title"] = "IIT University - Services";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IIT University - Services</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 4rem 0;
            text-align: center;
        }
        .stats-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            padding: 2rem;
            text-align: center;
            transition: transform 0.3s ease;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
        .stats-number {
            font-size: 3rem;
            font-weight: bold;
            color: #667eea;
        }
        .stats-label {
            color: #6c757d;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .action-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            padding: 2rem;
            margin-bottom: 1.5rem;
            transition: transform 0.3s ease;
        }
        .action-card:hover {
            transform: translateY(-5px);
        }
        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 8px;
        }
        .status-active {
            background-color: #28a745;
        }
        .status-warning {
            background-color: #ffc107;
        }
        .footer {
            background: #2c3e50;
            color: white;
            text-align: center;
            padding: 2rem 0;
            margin-top: 4rem;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-graduation-cap me-2"></i>IIT University
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/Home/Phase1Dashboard">Phase 1</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Phase 2</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i> Admin
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Services"><i class="fas fa-cogs me-2"></i>Services</a></li>
                            <li><a class="dropdown-item" href="/Etudiants"><i class="fas fa-users me-2"></i>Étudiants</a></li>
                            <li><a class="dropdown-item" href="/Paiements"><i class="fas fa-credit-card me-2"></i>Paiements</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Déconnexion</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1 class="display-4 fw-bold mb-3">Bienvenue à IIT</h1>
            <p class="lead mb-4">Institut Ivoirien de Technologie - Système de gestion intégré</p>
            <div class="row">
                <div class="col-md-4">
                    <div class="text-center">
                        <i class="fas fa-chart-line fa-3x mb-3 opacity-75"></i>
                        <h5>IIT Business School</h5>
                        <p class="small opacity-75">Commerce et Gestion</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <i class="fas fa-robot fa-3x mb-3 opacity-75"></i>
                        <h5>IIT Engineering</h5>
                        <p class="small opacity-75">Ingénierie et Technologie</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <i class="fas fa-users fa-3x mb-3 opacity-75"></i>
                        <h5>Formation Continue</h5>
                        <p class="small opacity-75">Développement professionnel</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container my-5">
        <!-- Statistiques des services -->
        <div class="row mb-5">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="stats-card">
                    <div class="stats-number">@ViewBag.TotalServices</div>
                    <div class="stats-label">Services Disponibles</div>
                    <p class="small text-muted mt-2">Services configurés dans le système</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="stats-card">
                    <div class="stats-number">@ViewBag.ServicesActifs</div>
                    <div class="stats-label">Services Actifs</div>
                    <p class="small text-muted mt-2">Services opérationnels</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="stats-card">
                    <div class="stats-number">@ViewBag.TotalSouscriptions</div>
                    <div class="stats-label">Souscriptions</div>
                    <p class="small text-muted mt-2">Étudiants abonnés aux services</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="stats-card">
                    <div class="stats-number">@ViewBag.RevenusMensuels.ToString("C0")</div>
                    <div class="stats-label">Revenus Mensuels</div>
                    <p class="small text-muted mt-2">Revenus générés par les services</p>
                </div>
            </div>
        </div>

        <!-- Actions Rapides -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="action-card">
                    <h4 class="mb-4">
                        <i class="fas fa-bolt text-primary me-2"></i>Actions Rapides
                    </h4>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="/Services/Create" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-plus fa-lg mb-2"></i><br>
                                <strong>Nouveau Service</strong><br>
                                <small>Ajouter un service</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Etudiants" class="btn btn-success w-100 py-3">
                                <i class="fas fa-users fa-lg mb-2"></i><br>
                                <strong>Gérer Étudiants</strong><br>
                                <small>Voir les étudiants</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Paiements" class="btn btn-info w-100 py-3">
                                <i class="fas fa-credit-card fa-lg mb-2"></i><br>
                                <strong>Gérer Paiements</strong><br>
                                <small>Traitement des règlements</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Home/Phase1Dashboard" class="btn btn-warning w-100 py-3">
                                <i class="fas fa-chart-line fa-lg mb-2"></i><br>
                                <strong>Tableau de Bord</strong><br>
                                <small>Voir les statistiques</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statut du Système -->
        <div class="row mb-5">
            <div class="col-lg-6 mb-4">
                <div class="action-card">
                    <h4 class="mb-4">
                        <i class="fas fa-server text-success me-2"></i>Statut du Système
                    </h4>
                    <div class="mb-3">
                        <div class="d-flex align-items-center">
                            <span class="status-indicator status-active"></span>
                            <strong>Base de données</strong>
                            <span class="badge bg-success ms-auto">Connectée</span>
                        </div>
                        <small class="text-muted">MySQL Server - Connection active</small>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex align-items-center">
                            <span class="status-indicator status-active"></span>
                            <strong>Application Web</strong>
                            <span class="badge bg-success ms-auto">Opérationnelle</span>
                        </div>
                        <small class="text-muted">ASP.NET Core MVC - Service actif</small>
                    </div>
                    <div>
                        <div class="d-flex align-items-center">
                            <span class="status-indicator status-active"></span>
                            <strong>Services</strong>
                            <span class="badge bg-success ms-auto">Tous actifs</span>
                        </div>
                        <small class="text-muted">@ViewBag.TotalServices services configurés et opérationnels</small>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">
                <div class="action-card">
                    <h4 class="mb-4">
                        <i class="fas fa-info-circle text-info me-2"></i>Informations Système
                    </h4>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-sm-4"><strong>Université :</strong></div>
                            <div class="col-sm-8">IIT - Institut International de Technologie</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-sm-4"><strong>Version :</strong></div>
                            <div class="col-sm-8">1.0.0</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-sm-4"><strong>Base de données :</strong></div>
                            <div class="col-sm-8">MySQL</div>
                        </div>
                    </div>
                    <div>
                        <div class="row">
                            <div class="col-sm-4"><strong>Framework :</strong></div>
                            <div class="col-sm-8">ASP.NET Core MVC</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Liste des services -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Liste des Services
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom du Service</th>
                                        <th>Type</th>
                                        <th>Prix</th>
                                        <th>Statut</th>
                                        <th>Souscriptions</th>
                                        <th>Revenus/Mois</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var service in Model)
                                        {
                                            <tr>
                                                <td>@service.IdService</td>
                                                <td>
                                                    <strong>@service.NomService</strong><br>
                                                    <small class="text-muted">@service.Description</small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">@service.TypeService</span>
                                                </td>
                                                <td>@service.Prix.ToString("C0")</td>
                                                <td>
                                                    @if (service.Statut == "actif")
                                                    {
                                                        <span class="badge bg-success">Actif</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">@service.Statut</span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">@(ViewBag.ServicesActifs > 0 ? ViewBag.TotalSouscriptions + " étudiants" : "0 étudiants")</span><br>
                                                    <small class="text-muted">@(ViewBag.RevenusMensuels > 0 ? ViewBag.RevenusMensuels.ToString("N0") + " FCFA/mois" : "0 FCFA/mois")</small>
                                                </td>
                                                <td>@service.DateCreation.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    <button class="btn btn-sm btn-primary" onclick="voirDetails(@service.IdService)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-warning" onclick="modifierService(@service.IdService)">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center text-muted py-4">
                                                <i class="fas fa-info-circle fa-3x mb-3"></i><br>
                                                Aucun service enregistré dans le système
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>IIT University</h5>
                    <p>Système de Gestion Intégré<br>© 2025 - IIT University - Tous droits réservés</p>
                </div>
                <div class="col-md-6">
                    <h5>Technologies</h5>
                    <p>ASP.NET Core MVC + MySQL<br>Interface moderne et sécurisée</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function voirDetails(serviceId) {
            alert('Détails du service ' + serviceId);
        }

        function modifierService(serviceId) {
            alert('Modification du service ' + serviceId);
        }
    </script>
</body>
</html>
