@model IITWebApp.Models.Etudiant

@{
    ViewData["Title"] = "Modifier l'étudiant";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Informations existantes -->
        <div class="col-md-4">
            <div class="card border-info mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Informations actuelles
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <strong>Matricule:</strong> @Model.Matricule
                    </div>
                    <div class="mb-2">
                        <strong>Nom complet:</strong> @Model.Nom @Model.Prenom
                    </div>
                    <div class="mb-2">
                        <strong>Email:</strong> @(Model.Email ?? "Non renseigné")
                    </div>
                    <div class="mb-2">
                        <strong>Téléphone:</strong> @(Model.Telephone ?? "Non renseigné")
                    </div>
                    <div class="mb-2">
                        <strong>Date de naissance:</strong> @Model.DateNaissance.ToString("dd/MM/yyyy")
                    </div>
                    <div class="mb-2">
                        <strong>Sexe:</strong> @(Model.Sexe == "M" ? "Masculin" : "Féminin")
                    </div>
                    <div class="mb-2">
                        <strong>Nationalité:</strong> @Model.Nationalite
                    </div>
                    <div class="mb-2">
                        <strong>Statut:</strong> 
                        <span class="badge bg-@(Model.Statut == "actif" ? "success" : "warning")">@Model.Statut</span>
                    </div>
                    <div class="mb-2">
                        <strong>Créé le:</strong> @Model.DateCreation?.ToString("dd/MM/yyyy HH:mm")
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Formulaire de modification -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Modifier l'étudiant
                    </h4>
                </div>
                <div class="card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="IdEtudiant" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Matricule" class="form-label">Matricule</label>
                        <input asp-for="Matricule" class="form-control" readonly />
                        <span asp-validation-for="Matricule" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Nom" class="form-label">Nom</label>
                        <input asp-for="Nom" class="form-control" value="@Model?.Nom" />
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Prenom" class="form-label">Prénom</label>
                        <input asp-for="Prenom" class="form-control" value="@Model?.Prenom" />
                        <span asp-validation-for="Prenom" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" value="@Model?.Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Telephone" class="form-label">Téléphone</label>
                        <input asp-for="Telephone" class="form-control" value="@Model?.Telephone" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DateNaissance" class="form-label">Date de naissance</label>
                        <input asp-for="DateNaissance" class="form-control" type="date" value="@Model?.DateNaissance.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="DateNaissance" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Sexe" class="form-label">Sexe</label>
                        <select asp-for="Sexe" class="form-control">
                            <option value="">Sélectionner...</option>
                            <option value="M" selected="@(Model?.Sexe == "M")">Masculin</option>
                            <option value="F" selected="@(Model?.Sexe == "F")">Féminin</option>
                        </select>
                        <span asp-validation-for="Sexe" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Nationalite" class="form-label">Nationalité</label>
                        <input asp-for="Nationalite" class="form-control" value="@Model?.Nationalite" />
                        <span asp-validation-for="Nationalite" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="Adresse" class="form-label">Adresse</label>
                <textarea asp-for="Adresse" class="form-control" rows="3">@Model?.Adresse</textarea>
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LieuNaissance" class="form-label">Lieu de naissance</label>
                <input asp-for="LieuNaissance" class="form-control" value="@Model?.LieuNaissance" />
                <span asp-validation-for="LieuNaissance" class="text-danger"></span>
            </div>
            
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Enregistrer
                </button>
            </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
