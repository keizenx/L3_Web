@model IEnumerable<IITWebApp.Models.Enseignant>

@{
    ViewData["Title"] = "Gestion des Enseignants";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-gradient">
                <i class="fas fa-user-tie me-3"></i>
                Gestion des Enseignants
            </h2>
            <a href="/Enseignants/Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                Nouveau Enseignant
            </a>
        </div>

        <div class="card shadow-elegant">
            <div class="card-header bg-gradient-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>
                    Liste des Enseignants
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-id-badge me-1"></i> Matricule</th>
                                <th><i class="fas fa-user me-1"></i> Nom Complet</th>
                                <th><i class="fas fa-envelope me-1"></i> Email</th>
                                <th><i class="fas fa-phone me-1"></i> Téléphone</th>
                                <th><i class="fas fa-graduation-cap me-1"></i> Spécialité</th>
                                <th><i class="fas fa-star me-1"></i> Grade</th>
                                <th><i class="fas fa-cog me-1"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var enseignant in Model)
                                {
                                    <tr>
                                        <td class="fw-bold">@enseignant.Matricule</td>
                                        <td>@enseignant.Nom @enseignant.Prenom</td>
                                        <td>@enseignant.Email</td>
                                        <td>@enseignant.Telephone</td>
                                        <td>@enseignant.Specialite</td>
                                        <td>@enseignant.Grade</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/Enseignants/Details/@enseignant.IdEnseignant" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/Enseignants/Edit/@enseignant.IdEnseignant" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/Enseignants/Delete/@enseignant.IdEnseignant" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center py-4">
                                        <i class="fas fa-users fa-2x text-muted mb-3"></i>
                                        <p class="text-muted">Aucun enseignant trouvé</p>
                                        <a href="/Enseignants/Create" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i>
                                            Ajouter le premier enseignant
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
