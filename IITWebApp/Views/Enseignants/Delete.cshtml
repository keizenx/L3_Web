@model IITWebApp.Models.Enseignant

@{
    ViewData["Title"] = "Supprimer l'enseignant";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header">
        <h4 class="mb-0 text-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Confirmer la suppression
        </h4>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Attention !</strong> Cette action est irréversible. Êtes-vous sûr de vouloir supprimer cet enseignant ?
        </div>

        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Matricule :</dt>
                    <dd class="col-sm-8">@Model.Matricule</dd>

                    <dt class="col-sm-4">Nom complet :</dt>
                    <dd class="col-sm-8">@Model.Nom @Model.Prenom</dd>

                    <dt class="col-sm-4">Email :</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Téléphone :</dt>
                    <dd class="col-sm-8">@Model.Telephone</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Spécialité :</dt>
                    <dd class="col-sm-8">@Model.Specialite</dd>

                    <dt class="col-sm-4">Grade :</dt>
                    <dd class="col-sm-8">@Model.Grade</dd>

                    <dt class="col-sm-4">Statut :</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-@(Model.Statut == "Actif" ? "success" : "secondary")">
                            @Model.Statut
                        </span>
                    </dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="IdEnseignant" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Annuler
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-1"></i> Confirmer la suppression
                </button>
            </div>
        </form>
    </div>
</div>
