@model IITWebApp.Models.Cours

@{
    ViewData["Title"] = "Modifier le cours";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">
            <i class="fas fa-edit me-2"></i>
            Modifier le cours
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="IdCours" />

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CodeCours" class="form-label">Code du cours</label>
                        <input asp-for="CodeCours" class="form-control" readonly />
                        <span asp-validation-for="CodeCours" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="NomCours" class="form-label">Nom du cours</label>
                        <input asp-for="NomCours" class="form-control" />
                        <span asp-validation-for="NomCours" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="IdClasse" class="form-label">Classe</label>
                        <select asp-for="IdClasse" class="form-control" asp-items="ViewBag.IdClasse">
                            <option value="">Sélectionner une classe...</option>
                        </select>
                        <span asp-validation-for="IdClasse" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="IdFiliere" class="form-label">Filière</label>
                        <select asp-for="IdFiliere" class="form-control" asp-items="ViewBag.IdFiliere">
                            <option value="">Sélectionner une filière...</option>
                        </select>
                        <span asp-validation-for="IdFiliere" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="IdEnseignant" class="form-label">Enseignant</label>
                        <select asp-for="IdEnseignant" class="form-control" asp-items="ViewBag.IdEnseignant">
                            <option value="">Sélectionner un enseignant...</option>
                        </select>
                        <span asp-validation-for="IdEnseignant" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Coefficient" class="form-label">Coefficient</label>
                        <input asp-for="Coefficient" class="form-control" type="number" step="0.1" />
                        <span asp-validation-for="Coefficient" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="HeuresTotales" class="form-label">Heures totales</label>
                        <input asp-for="HeuresTotales" class="form-control" type="number" />
                        <span asp-validation-for="HeuresTotales" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Semestre" class="form-label">Semestre</label>
                        <select asp-for="Semestre" class="form-control">
                            <option value="">Sélectionner...</option>
                            <option value="S1" selected="@(Model.Semestre == "S1")">Semestre 1</option>
                            <option value="S2" selected="@(Model.Semestre == "S2")">Semestre 2</option>
                            <option value="S3" selected="@(Model.Semestre == "S3")">Semestre 3</option>
                            <option value="S4" selected="@(Model.Semestre == "S4")">Semestre 4</option>
                            <option value="S5" selected="@(Model.Semestre == "S5")">Semestre 5</option>
                            <option value="S6" selected="@(Model.Semestre == "S6")">Semestre 6</option>
                        </select>
                        <span asp-validation-for="Semestre" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Enregistrer
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
