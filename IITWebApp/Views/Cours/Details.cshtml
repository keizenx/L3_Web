@model IITWebApp.Models.Cours

@{
    ViewData["Title"] = "Détails du cours";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">
            <i class="fas fa-book me-2"></i>
            Détails du cours
        </h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Code du cours :</dt>
            <dd class="col-sm-9">@Model.CodeCours</dd>

            <dt class="col-sm-3">Nom du cours :</dt>
            <dd class="col-sm-9">@Model.NomCours</dd>

            <dt class="col-sm-3">Enseignant :</dt>
            <dd class="col-sm-9">@Model.Enseignant?.Nom @Model.Enseignant?.Prenom</dd>

            <dt class="col-sm-3">Classe :</dt>
            <dd class="col-sm-9">@Model.Classe?.NomClasse</dd>

            <dt class="col-sm-3">Filière :</dt>
            <dd class="col-sm-9">@Model.Filiere?.NomFiliere</dd>

            <dt class="col-sm-3">Semestre :</dt>
            <dd class="col-sm-9">@Model.Semestre</dd>

            <dt class="col-sm-3">Année académique :</dt>
            <dd class="col-sm-9">@Model.AnneeAcademique</dd>

            <dt class="col-sm-3">Nombre d'heures :</dt>
            <dd class="col-sm-9">@Model.NombreHeures</dd>

            <dt class="col-sm-3">Coefficient :</dt>
            <dd class="col-sm-9">@Model.Coefficient</dd>

            <dt class="col-sm-3">Description :</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Statut :</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.Statut == "actif" ? "success" : "secondary")">
                    @Model.Statut
                </span>
            </dd>

            <dt class="col-sm-3">Date de création :</dt>
            <dd class="col-sm-9">@Model.DateCreation?.ToString("dd/MM/yyyy")</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Retour à la liste
            </a>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.IdCours" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i> Modifier
                </a>
            </div>
        </div>
    </div>
</div>
