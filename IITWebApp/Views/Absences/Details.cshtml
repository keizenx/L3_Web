@model IITWebApp.Models.Absence

@{
    ViewData["Title"] = "Détails Absence";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-elegant">
            <div class="card-header bg-gradient-primary text-white">
                <h4 class="card-title mb-0">
                    <i class="fas fa-eye me-2"></i>
                    Détails de l'Absence
                </h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Étudiant:</strong>
                        <p class="text-muted">@Model.Etudiant?.Nom @Model.Etudiant?.Prenom</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Cours:</strong>
                        <p class="text-muted">@Model.Cours?.NomCours</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Date d'Absence:</strong>
                        <p class="text-muted">@Model.DateAbsence.ToShortDateString()</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Type d'Absence:</strong>
                        <p class="text-muted">@Model.TypeAbsence</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Durée (heures):</strong>
                        <p class="text-muted">@Model.DureeHeures</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Justifiée:</strong>
                        <span class="badge bg-@(Model.Justifiee == true ? "success" : "danger")">
                            @(Model.Justifiee == true ? "Oui" : "Non")
                        </span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Date de Saisie:</strong>
                        <p class="text-muted">@Model.DateCreation?.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="col-md-6">
                        <strong>ID Absence:</strong>
                        <p class="text-muted">@Model.IdAbsence</p>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Motif))
                {
                    <div class="mb-3">
                        <strong>Motif:</strong>
                        <p class="text-muted">@Model.Motif</p>
                    </div>
                }

                <div class="d-flex justify-content-between mt-4">
                    <a href="/Absences" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Retour à la liste
                    </a>
                    <div>
                        <a href="/Absences/Edit/@Model.IdAbsence" class="btn btn-warning me-2">
                            <i class="fas fa-edit me-1"></i>
                            Modifier
                        </a>
                        <a href="/Absences/Delete/@Model.IdAbsence" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>
                            Supprimer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
