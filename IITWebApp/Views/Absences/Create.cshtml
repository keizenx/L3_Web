@model IITWebApp.Models.Absence

@{
    ViewData["Title"] = "Créer Absence";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-elegant">
            <div class="card-header bg-gradient-primary text-white">
                <h4 class="card-title mb-0">
                    <i class="fas fa-plus me-2"></i>
                    Créer une nouvelle Absence
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdEtudiant" class="form-label">
                                    <i class="fas fa-user me-1"></i> Étudiant *
                                </label>
                                <select asp-for="IdEtudiant" class="form-control" asp-items="ViewBag.IdEtudiant">
                                    <option value="">Sélectionner un étudiant</option>
                                </select>
                                <span asp-validation-for="IdEtudiant" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdCours" class="form-label">
                                    <i class="fas fa-book me-1"></i> Cours *
                                </label>
                                <select asp-for="IdCours" class="form-control" asp-items="ViewBag.IdCours">
                                    <option value="">Sélectionner un cours</option>
                                </select>
                                <span asp-validation-for="IdCours" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DateAbsence" class="form-label">
                                    <i class="fas fa-calendar me-1"></i> Date d'Absence *
                                </label>
                                <input asp-for="DateAbsence" class="form-control" type="date" />
                                <span asp-validation-for="DateAbsence" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TypeAbsence" class="form-label">
                                    <i class="fas fa-exclamation-triangle me-1"></i> Type d'Absence
                                </label>
                                <select asp-for="TypeAbsence" class="form-control">
                                    <option value="ordinaire">Ordinaire</option>
                                    <option value="exceptionnelle">Exceptionnelle</option>
                                    <option value="justifiee">Justifiée</option>
                                </select>
                                <span asp-validation-for="TypeAbsence" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DureeHeures" class="form-label">
                                    <i class="fas fa-clock me-1"></i> Durée (heures)
                                </label>
                                <input asp-for="DureeHeures" class="form-control" type="number" step="0.5" min="0.5" />
                                <span asp-validation-for="DureeHeures" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check mt-4">
                                    <input asp-for="Justifiee" class="form-check-input" />
                                    <label asp-for="Justifiee" class="form-check-label">
                                        <i class="fas fa-check-circle me-1"></i> Absence justifiée
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Motif" class="form-label">
                            <i class="fas fa-comment me-1"></i> Motif
                        </label>
                        <textarea asp-for="Motif" class="form-control" rows="3" placeholder="Préciser le motif de l'absence..."></textarea>
                        <span asp-validation-for="Motif" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/Absences" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Retour à la liste
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>
                            Enregistrer l'Absence
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Validation côté client
        $(document).ready(function() {
            $('form').on('submit', function(e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                $(this).addClass('was-validated');
            });
        });
    </script>
}
