@model IITWebApp.Models.Absence

@{
    ViewData["Title"] = "Supprimer Absence";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-elegant">
            <div class="card-header bg-gradient-danger text-white">
                <h4 class="card-title mb-0">
                    <i class="fas fa-trash-alt me-2"></i>
                    Confirmer la Suppression
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Attention!</strong> Cette action est irréversible. Êtes-vous sûr de vouloir supprimer cette absence ?
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Étudiant:</strong>
                        <p class="text-muted">@Model.Etudiant?.Nom @Model.Etudiant?.Prenom</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Cours:</strong>
                        <p class="text-muted">@Model.Cours?.NomCours</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Date d'Absence:</strong>
                        <p class="text-muted">@Model.DateAbsence.ToShortDateString()</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Type d'Absence:</strong>
                        <p class="text-muted">@Model.TypeAbsence</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Durée (heures):</strong>
                        <p class="text-muted">@Model.DureeHeures</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Justifiée:</strong>
                        <span class="badge bg-@(Model.Justifiee == true ? "success" : "danger")">
                            @(Model.Justifiee == true ? "Oui" : "Non")
                        </span>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdAbsence" />

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/Absences" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>
                            Confirmer la Suppression
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
